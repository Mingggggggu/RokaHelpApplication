<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DAF9FD"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="군대 어디로카?"
            android:textSize="40dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/daysujungbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="620dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="320dp"
        android:text="수정하기"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="510dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/ibdaeyejung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입대 예정일"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/junyukyejung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전역 예정일"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/wantsujungbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="320dp"
        android:text="수정하기"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
        android:id="@+id/wantsunwi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가고싶은 부대 순위"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/firstwant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1순위"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/secondwant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2순위"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/thirdwant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3순위"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="280dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="모집병별 군지원별 접수현황"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/mozipckbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:text="확인하기"
            android:textSize="20dp"
            android:background="@drawable/button_back"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="맞춤형 특기병 정보"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/specialckbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:text="확인하기"
            android:textSize="20dp"
            android:background="@drawable/button_back"/>

    </LinearLayout>

</RelativeLayout>